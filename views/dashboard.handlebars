<h1>Your Dashboard</h1>

<!-- Display user's posts -->
{{#each posts}}
  <div>
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <p>Created by: {{this.user.username}}</p>
    
    <!-- Display comments for this post -->
    {{#each this.comments}}
      <div>
        <p>{{this.comment_text}} - by {{this.user.username}}</p>
      </div>
    {{/each}}

    <!-- Comment Form -->
    <form class="comment-form" data-post-id="{{this.id}}">
      <textarea name="comment_text" placeholder="Add a comment"></textarea>
      <button type="submit">Submit</button>
    </form>

    <button class="edit-post-btn" data-id="{{this.id}}">Edit</button>
    <button class="delete-post-btn" data-id="{{this.id}}">Delete</button>
  </div>
{{/each}}

<form id="new-post-form">
  <label for="title">Title</label>
  <input type="text" id="title" name="title" required>
  
  <label for="content">Content</label>
  <textarea id="content" name="content" required></textarea>

  <button type="submit">Add New Post</button>
</form>